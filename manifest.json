{
  "name": "Engine",
  "version": "0.0.0.0",
  "description": "Real-time, relevant knowledge inside Gmail",
  "permissions": [
  ],
  "manifest_version": 2,
  "icons": {
    "48" : "sample-48.png",
    "128" : "sample-128.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://mail.google.com/*" ],
      "js": [ 
        "jquery-1.8.2.min.js",
        "async.min.js",
        "ldengine.js" 
      ]
    }
  ],
  "permissions": [
    "http://apps.engine.co/",
    "https://apps.engine.co/",
    "http://preview.engine.co/",
    "https://preview.engine.co/",
    "https://127.0.0.1:3000/",
    "storage"
  ],
  "web_accessible_resources": [
  	"logo_engine_dark.png"
  ],
  "options_page": "options.html",
  "browser_action": { 
	  "default_icon": {
		  "19" : "logo_engine_dark.png",
		  "38" : "logo_engine_dark.png"
		},
	  "default_title": "Engine Inc."
	}
}
